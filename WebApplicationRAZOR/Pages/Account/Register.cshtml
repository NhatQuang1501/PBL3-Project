@page
@model RegisterModel
@{
    Layout = null;
    ViewData["title"] = "Đăng kí";
}

<link rel="stylesheet" href="~/css/register.css" />
<link rel="stylesheet" href="~/css/style.css" />

<body>
    <header>
        <nav>
            <div class="logo-box">
                <img src="~/img/logo.png" alt="Logo" class="logo" />
            </div>
            <ul class="nav-links">
                <div class="sign-up-box">
                    <a asp-page="/Account/Register" class="btn btn-su" style="text-decoration: none">Đăng ký</a>
                    <a asp-page="/Account/Login" class="btn btn-su" style="text-decoration: none">Đăng nhập</a>
                </div>
            </ul>
        </nav>

        <div class="container">
            <h2>ĐĂNG KÝ</h2>
            <form>
                <label for="Email">Email</label>
                <input type="text" id="email" name="email" />

                <label for="Username">Username</label>
                <input type="text" id="Username" name="Username" />

                <label for="password">Password</label>
                <input type="password" id="password1" name="password1" />

                <label for="password">Re-Enter Password</label>
                <input type="password" id="password2" name="password2" />

                <div class="radio-group">
                    <label><input type="radio" name="user-type" value="tutor" checked> Gia sư</label>
                    <label><input type="radio" name="user-type" value="parent"> Phụ huynh</label>
                </div>

                <!-- <button type="submit">Đăng nhập</button> -->
                <a asp-page="/Account/Login"><button class="btn-Register" type="button">Đăng ký</button></a>
            </form>
        </div>
    </header>
</body>
</html>

