@page
@model PBL3_Project.Pages.Parent.PDonePostModel
@{
	Layout = "_PLayout";
	ViewData["title"] = "Trang chủ Phụ huynh";
}

<link rel="stylesheet" href="~/css/Personal.css" />
<link rel="stylesheet" href="~/css/ChangePassGS.css" />
<link rel="stylesheet" href="~/css/main.css" />
<link rel="stylesheet" href="~/css/CheckedPost.css" />

  <body>

    <div class="container">
      <div class="control">
            <img class="avatar" src="~/img/avar.jpg" alt="Avatar" />
        <div class="user-info">
          <div class="username">ChuBeDan</div>
          <img src="~img/iconControl.png" alt="Logo" class="iconControl" />
        </div>
      </div>

      <div class="menu">

        <div class="choice">
            <ul>
              <li><a asp-page="/Parent/PInfor"><u>Thông tin tài khoản</u> </a>
              </li>
                    <li>
                        <a asp-page="/Parent/PProfile"><u>Quản lý hồ sơ : <br><br></u></a>
              </li>
              <li><u> Quản lý bài đăng :<br><br></u> 
                <ul>
                  <li style="color: white;"><a asp-page="/Parent/PDuyetPost">Bài đăng được duyệt </a></li>
                  <li style="color: white;"><a asp-page="/Parent/PChuaDuyetPost">Bài đăng chờ duyệt</a></li>
                  <li style="color: white;"><a href="#">Suất dạy đã giao</a></li>

                </ul>
              </li>
            </ul>
          </div>
          
      </div>
        

    </div>

    <main>


        @foreach (var post in Model.Posts)
        {
            <div class="job-posting">
                <div class="image-container">
                    <img src="~/img/avar.jpg" alt="avar" class="avar">
                    <p class="caption">Lờ tờ mờ</p>
                </div>
                <br>
                <p><b><i>Môn học:</i></b> @post.MonHoc</p><br>
                <p><b><i>Trình độ học vấn:</i></b> @post.TrinhDoHocVan</p><br>
                <p><b><i>Học phí:</i></b> @post.HocPhi</p><br>
                <p><b><i>Lớp:</i></b> @post.Lop</p><br>
                <p><b><i>Số buổi:</i></b> @post.SoBuoi</p><br>
                <p><b><i>Số học viên:</i></b> @post.SoHocVien</p><br>
                <p><b><i>Thời gian:</i></b> @post.ThoiGian</p><br>
                <p><b><i>Địa chỉ:</i></b> @post.DiaChi</p><br>
                <p><b><i>Ghi chú:</i></b> @post.GhiChu</p><br>

                @*<button class="btn btn-primary custom-button" type="button-submit">Đánh giá gia sư</button>*@
              @*  <td><a href="/admin/qlpinfo/@HoSo.ID_PhuHuynh">View</a></td>
                <a asp-page="/Parent/PReview" class="btn btn-DG">Đánh giá gia sư</a>*@
                <a href="/parent/preview/@post.ID_BaiDang" class="btn btn-DG">Đánh giá gia sư</a>
                <style>

                    .btn btn-DG {
                            background-color: #F1BB45;
                            border-color: #F1BB45;
                            text-align: center;
                    }
                </style>
            </div>
        }
  
        
      </main>
  

  </body>
