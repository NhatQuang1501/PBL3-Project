@page
@model PBL3_Project.Pages.Parent.PChangePassModel
@{
	Layout = "_PLayout";
	ViewData["Title"] = "Đổi mật khẩu Phụ huynh";
}

<link rel="stylesheet" href="~/css/Personal.css" />
<link rel="stylesheet" href="~/css/ChangePassGS.css" />

<body>
    <div class="container">
        <div class="control">
            <img class="avatar" src="~img/avar.jpg" alt="Avatar" />
            <div class="user-info">
                <div class="username">Phụ huynh</div>
                <img src="~img/iconControl.png" alt="Logo" class="iconControl" />
            </div>
        </div>

        <div class="menu">

            <div class="choice">
                <ul>
                    <li>
                        <a asp-page="/Parent/PProfile"><u>Thông tin tài khoản</u> </a>
                    </li>
                    <li>
                        <a asp-page="/Parent/PInfo"><u>Quản lý hồ sơ : <br><br></u></a>
                    </li>
                    <li><a href="#"> <u> Quản lý bài đăng :<br><br></u> </a>
                        <ul>
                            <li style="color: white;"><a asp-page="/Parent/PDuyetPost">Bài đăng được duyệt </a></li>
                            <li style="color: white;"><a asp-page="/Parent/PChuaDuyetPost">Bài đăng chờ duyệt</a></li>
                            <li style="color: white;"><a href="/Parent/PDonePost">Suất dạy đã giao</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </div>

    <div class="container1">
        <img src="~/img/background.png" alt="background" class="background" />
        <form class="form" style="height:600px , width : 100px " method="post">
            <table >
                <tr>
                    <td colspan="2">
                        <h2>Thông tin tài khoản <br /><br /></h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong><label for="username">Email đăng nhập:</label></strong>
                        <label for="Email" name="Email">@Model.Email1<br /><br /></label>
                    </td>
                    <br />
                </tr>

                <tr>
                    <td><div><strong><br> Nhập mật khẩu hiện tại * <br><br></strong></div></td>
                </tr>
                <tr>
                    <td>
                        <input type="password" id="password1" name="CurrentPassword" asp-for="Model.CurrentPassword">
                        <span asp-validation-for="Model.CurrentPassword" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td><div><strong> Nhập mật khẩu mới * <br><br></strong></div></td>
                </tr>
                <tr>
                    <td>
                        <input type="password" id="password2" name="NewPassword" asp-for="Model.NewPassword">
                        <span asp-validation-for="Model.NewPassword" class="text-danger"></span>
                    </td>
                </tr>

                <tr>
                    <td><div><strong> Xác nhận mật khẩu mới * </strong></div></td>
                </tr>
                <tr>
                    <td>
                        <input type="password" id="password3" name="ConfirmPassword" asp-for="Model.ConfirmPassword">
                        <span asp-validation-for="Model.ConfirmPassword" class="text-danger"></span>
                    </td>
                </tr>
            </table>
@*            <button class="apply-btn" type="button" asp-page-handler="ChangePassword" runat="Server" onclick="ChangePassword()">Đổi mật khẩu</button>
*@            <button type="submit button" class="apply-btn">Đổi mật khẩu</button>

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>

    <style>
        .form{
            margin-left: -60px;
        }
    </style>
</body>