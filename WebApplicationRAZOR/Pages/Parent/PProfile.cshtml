@page
@model PBL3_Project.Pages.Parent.PProfileModel
@{
    Layout = "_PLayout";
    ViewData["title"] = "Tài khoản Phụ huynh";
}

    <link rel="stylesheet" href="~/css/Personal.css" />
    <link rel="stylesheet" href="~/css/ChangePassGS.css" />

<body>

    <div class="container">
        <div class="control">
            <img class="avatar" src="~img/avar.jpg" alt="Avatar" />
            <div class="user-info">
                <div class="username">ChuBeDan</div>
                <img src="~img/iconControl.png" alt="Logo" class="iconControl" />
            </div>
        </div>

        <div class="menu">

            <div class="choice">
                <ul>
                    <li>
                        <a asp-page="/Parent/PInfor"><u>Thông tin tài khoản</u> </a>
                    </li>
                    <li>
                        <a asp-page="/Parent/PProfile"><u>Quản lý hồ sơ : <br><br></u></a>
                    </li>
                    <li>
                        <u> Quản lý bài đăng :<br><br></u>
                        <ul>
                            <li style="color: white;"><a asp-page="/Parent/PDuyetPost">Bài đăng được duyệt </a></li>
                            <li style="color: white;"><a asp-page="/Parent/PChuaDuyetPost">Bài đăng chờ duyệt</a></li>
                            <li style="color: white;"><a href="/Parent/PDonePost">Suất dạy đã giao</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </div>

    <div class="container1">
        <form class="form">
            <table>
                <tr>
                    <td colspan="2">
                        <h2>Thông tin tài khoản <br /><br /></h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong><label for="username">Email đăng nhập: @Model.Email</label></strong>
                    </td>
                    @*<td>
                        <label for="Email">Phuhuynh@gmail.com<br /> <br /> </label>
                    </td>*@
                    <br />
                </tr>

                @*<tr>
                    <td>
                        <strong><label for="password">Mật khẩu:</label></strong>
                    </td>
                    <td><label for="Pass">Phuhuynh1</label></td>
                </tr>*@
                <tr>
                    <td>
                        @*<button class="apply-btn" type="button" style="margin-left:100px" asp-page="/Parent/PChangePass">Đổi mật khẩu</button>*@
                        <a href="/Parent/PChangePass" class="btn apply-btn" style="margin-left:50px">Đổi mật khẩu</a>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</body>
