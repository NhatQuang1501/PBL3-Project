@page "{id:int}"
@model PBL3_Project.Pages.Parent.ListTutorModel
@{
	Layout = "_PLayout";
	ViewData["title"] = "Danh sách gia sư đăng ký";
}
<link rel="stylesheet" href="~/css/ChangePassGS.css" />
<link rel="stylesheet" href="~/css/main.css">
<link rel="stylesheet" href="~/css/createPost.css" />
<link rel="stylesheet" href="~/css/Personal.css" />


<body>

    <div class="container">
        <div class="control">
            <img class="avatar" src="~img/avar.jpg" alt="Avatar" />
            <div class="user-info">
                <div class="username">ChuBeDan</div>
                <img src="~img/iconControl.png" alt="Logo" class="iconControl" />
            </div>
        </div>

        <div class="menu">

            <div class="choice">
                <ul>
                    <li>
                        <a asp-page="/Parent/PInfor"><u>Thông tin tài khoản</u> </a>
                    </li>
                    <li>
                        <a asp-page="/Parent/PProfile"><u>Quản lý hồ sơ : <br><br></u></a>
                    </li>
                    <li>
                        <u> Quản lý bài đăng :<br><br></u>
                        <ul>
                            <li style="color: white;"><a asp-page="/Parent/PDuyetPost">Bài đăng được duyệt </a></li>
                            <li style="color: white;"><a asp-page="/Parent/PChuaDuyetPost">Bài đăng chờ duyệt</a></li>
                            <li style="color: white;"><a href="#">Suất dạy đã giao</a></li>

                        </ul>
                    </li>
                </ul>
            </div>

        </div>


    </div>



    <main>
        <form method="post" class="TutorPost" asp-page-handler="SubmitForm" style="margin-top:-350px">
            <div class="create-profile">
                <table class="table" style="width:800px ; height :100px ; font-size :150%">
                                            
                    <thead>
                        <tr>
                            <th>Tên gia sư</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Giới tính</th>
                            <th>Trình độ học vấn</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ListGiaSu != null)
                        {
                            @foreach (var HoSo in Model.ListGiaSu)
                            {
                                <tr>
                                    <td>@HoSo.TenGiaSu</td>
                                    <td>@HoSo.SoDienThoai</td>
                                    <td>@HoSo.Email</td>
                                    @{
                                        if(HoSo.GioiTinh == true)
                                        {
                                            <td>Nữ</td>
                                        }
                                        else
                                        {
                                            <td>Nam</td>
                                        }
                                    }
                                    <td>@HoSo.TrinhDoHocVan</td>
                                    <td>
                                        <button class="btn btn-primary" type="submit button" asp-page-handler="Choose" asp-route-id="@HoSo.ID_GiaSu" onclick="return confirm('Bạn có muốn chọn gia sư này không?')">Chọn</button>
                                    </td>

                                </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>

        </form>


        <style>
            .TutorPost{
                width : 600px;
                margin-left: 100px;

            }

            .td{
                height: 100px;
                width: 600px;

            }
        </style>

    </main>
</body>