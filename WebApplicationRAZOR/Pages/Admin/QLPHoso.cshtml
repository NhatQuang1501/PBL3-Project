@page
@model PBL3_Project.Pages.Admin.QLPHosoModel
@{
    Layout = null;
    ViewData["title"] = "Quản lý tài khoản phụ huynh";
}

<head>
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/mainAdmin.css">
    <link rel="stylesheet" href="~/css/Personal.css">
    <link rel="stylesheet" href="~/css/hoSoGiaSu.css">
    <link rel="stylesheet" href="~/css/managePH.css">
    
</head>

<body>
    <header>
        <nav>
            <div class="logo-box">
                
                <img src="~/img/logo.png" alt="Logo" class="logo" />
            </div>
            <ul class="nav-links">
                <li><a href="#">Trang chủ</a></li>

               
                <div class="log-out-box">
                    <a href="index.html" class="btn btn-su">Đăng xuất</a>
                </div>

            </ul>
        </nav>
    </header>


    <div class="container2">
        <div class="control">
            <img class="avatar" src="~/img/avar.jpg" alt="Avatar" />
            <div class="user-info">
                <div class="username">ADMIN</div>
                <img src="~/img/iconControl.png" alt="Logo" class="iconControl" />
            </div>
        </div>

        <div class="menu">

            <div class="choice">
                <ul>
                    <li>
                        <a href="/admin/qlpost"><u>Quản lý bài đăng</u> </a>
                    </li>

                    <li>
                        <a href="/admin/qlthoso"><u>Quản lý tài khoản Gia sư <br><br></u></a>
                    </li>

                    <li>
                        <a href="/admin/qlphoso"><u> Quản lý tài khoản Phụ huynh<br><br></u> </a>
                    </li>

                </ul>
            </div>

        </div>
    </div>
    @if (Model.HoSoPhuHuynhs != null)
{
    <main>

        <h1 class="pageTitle">Quản lý tài khoản Phụ huynh</h1>
        <form method="post">
            <table>
                <thead>
                    <tr>
                        <th>ID Phụ huynh</th>
                        <th>Tên tài khoản</th>
                        <th>Mật khẩu</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.HoSoPhuHuynhs != null)
                    {
                        @foreach (var HoSo in Model.HoSoPhuHuynhs)
                        {
                            <tr>
                                <td>@HoSo.ID_PhuHuynh</td>
                                <td>@HoSo.TenAcc</td>
                                <td>@HoSo.PasswordAcc</td>
                                <td><a href="/admin/qlpinfo/@HoSo.ID_PhuHuynh">View</a></td>
                                <td> <button class="Del" type="button submit" asp-page-handler="Delete" asp-route-id="@HoSo.ID_PhuHuynh" onclick="return confirm('Bạn có muốn xoá không?')">Xóa tài khoản</button></td>

                            </tr>
                        }
                    }


                </tbody>
            </table>
            </form>

            

    </main>
    }
    else
    {
        <div class="container">
            <p>Không tìm thấy tài khoản gia sư nào!</p>

        </div>
    }

 
</body>

<footer>

    <div class="footer">
        <img src="image/footer.png" alt="footer" class="footer" height="188px" width="1200px">
    </div>
</footer>

</html>