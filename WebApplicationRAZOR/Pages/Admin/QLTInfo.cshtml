@page "{id:int}"
@model PBL3_Project.Pages.Admin.QLTInfoModel
@{
	Layout = null;
	ViewData["title"] = "Quản lý hồ sơ Gia sư";
}



<div class="bg-secondary bg-opacity-10 py-2 mb-5">
	<div class="container">
		<h1>Hồ sơ gia sư</h1>
	</div>
</div>



@if (Model.HoSoGiaSu != null)
{
		<div>
		<div class="container">
			<form method="post">

			
				<div class="mb-3">
					<label for="heading" class="form-label">Id</label>
					<input type="text" class="form-control" id="id" asp-for="HoSoGiaSu.ID_GiaSu" readonly>
				</div>
				<div class="mb-3">
					<label for="heading" class="form-label">Họ tên</label>
					<input type="text" class="form-control" id="hoten" asp-for="HoSoGiaSu.TenGiaSu" readonly>
				</div>
				
				<div class="mb-3">
					<label for="NgaySinh" class="form-label">Ngày sinh</label>
					<input type="date" class="form-control" id="NgaySinh" asp-for="HoSoGiaSu.NgaySinh">
				</div>
				<div class="mb-3">
					<label for="heading" class="form-label">Địa chỉ</label>
					<input type="text" class="form-control" id="diachi" asp-for="HoSoGiaSu.DiaChi" readonly>
				</div>
				
				<div class="mb-3">
					<label for="monhoc" class="form-label">Môn học</label>
					<input type="text" class="form-control" id="monhoc" asp-for="HoSoGiaSu.MonHoc" readonly>
				</div>
				
				<div class="mb-3">
					<label for="heading" class="form-label">Số điện thoại</label>
					<input type="text" class="form-control" id="sodienthoai" asp-for="HoSoGiaSu.SoDienThoai" readonly>
				</div>
				
				<div class="mb-3">
					<label for="heading" class="form-label">Trình độ học vấn</label>
					<input type="text" class="form-control" id="trinhdohocvan" asp-for="HoSoGiaSu.TrinhDoHocVan" readonly>
				</div>
				
				<div class="mb-3">
					<label for="heading" class="form-label">Học phí</label>
					<input type="text" class="form-control" id="hocphi" asp-for="HoSoGiaSu.HocPhi" readonly>
				</div>
				
				<div class="radio-group">
					<label><input type="radio" name="user-type" value="false" asp-for=HoSoGiaSu.GioiTinh> Nam</label>
					<label><input type="radio" name="user-type" value="true" checked> Nữ</label>
				</div>
				 <div class="mb-3 ">
					 <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
				 </div>

			</form>

		</div>
	</div>
}
else
{
	<div class="container">
		<p>Blog Post Not Found!</p>

	</div>
}

