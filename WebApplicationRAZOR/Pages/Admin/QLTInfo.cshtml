@page "{id:int}"
@model PBL3_Project.Pages.Admin.QLTInfoModel
@{
	Layout = null;
	ViewData["title"] = "Quản lý hồ sơ Gia sư";
}



@*<div class="bg-secondary bg-opacity-10 py-2 mb-5">
	<div class="container">
		<h1>Hồ sơ gia sư</h1>
