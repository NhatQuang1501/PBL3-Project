@page
@model PBL3_Project.Pages.Tutor.TPersonalModel
@{
}
@{
    Layout = "_TLayout";
    ViewData["title"] = "Hồ sơ Gia sư";
}


    <link rel="stylesheet" href="~/css/hoSoGiaSu.css">
    <link rel="stylesheet" href="~/css/Personal.css" />

<body>

    <div class="container">
        <div class="control">
            <img class="avatar" src="~img/avar.jpg" alt="Avatar" />
            <div class="user-info">
                <div class="username">ChuBeDan</div>
                <img src="~img/iconControl.png" alt="Logo" class="iconControl" />
            </div>
        </div>

        <div class="menu">

            <div class="choice">
                <ul>
                    <li>
                        <a asp-page="/TProfile"><u>Thông tin tài khoản</u> </a>
                    </li>
                    <li>
                        <a asp-page="/TInfo"><u>Quản lý hồ sơ : <br><br></u></a>
                    </li>
                    <li>
                        <a href="#"><u> Quản lý suất dạy :<br><br></u> </a>
                        <ul>
                            <li style="color: white;"><a asp-page="/TDangKiPost">Suất dạy đã đăng kí </a></li>
                            <li style="color: white;"><a asp-page="/TDonePost">Suất dạy được nhận</a></li>
                            <li style="color: white;"><a asp-page="/TReview">Đánh giá của tôi</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

        </div>
    </div>

    <div class="container1">
        <img src="~/img/background.png" alt="background" class="background" />
        <main>
            <div class="create-profile">
                <form method="post">
                    <div>
                        <label>Họ tên*</label>
                        <input type="text" asp-for="AddTInfor.TenGiaSu">
                    </div>
                    <div class="mb-3">
                        <label for="NgaySinh" class="form-label">Ngày sinh*</label>
                        <input type="date" class="form-control" id="NgaySinh" asp-for="AddTInfor.NgaySinh">
                    </div>
                    <div>
                        <label>Địa chỉ*</label>
                        <input type="text" asp-for="AddTInfor.DiaChi">
                    </div>
                    <div>
                        <label>Môn Học*</label>
                        <input type="text" asp-for="AddTInfor.MonHoc">
                    </div>
                    <div>
                        <label>Số điện thoại*</label>
                        <input type="text" asp-for="AddTInfor.SoDienThoai">
                    </div>
                    <div>
                        <label>Trình độ học vấn*</label>
                        <input type="text" asp-for="AddTInfor.TrinhDoHocVan">
                    </div>
                    <div>
                        <label>Học phí*</label>
                        <input type="text" asp-for="AddTInfor.GioiTinh">
                    </div>
                    <div class="radio-group">
                        <label><input type="radio" name="user-type" value="false" asp-for=AddTInfor.GioiTinh> Nam</label>
                        <label><input type="radio" name="user-type" value="true" checked> Nữ</label>
                    </div>

                    <button class="Save-btn" type="submit">Lưu</button>
                    @*<button class="Del-btn">Xóa</button>*@
                    @* <div class="mb-3 d-flex justify-content-between">
                    <button class="btn btn-primary" type="submit" asp-page-handler="Save">Lưu</button>
                    <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Xóa</button>
                    </div>*@
                </form>
               
            </div>
            
        </main>

       
    </div>
</body>

